<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kondosoft.kondo-invaders" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Kondo Invaders</name>
    <description>
      A simple shoot em up like space invaders, our first published work as a game dev studio.
    </description>
    <author email="info@kondosoft.com" href="http://kondosoft.com/kondo-invaders">
        The Kondo soft team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
